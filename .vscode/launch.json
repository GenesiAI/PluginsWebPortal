{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch Edge against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "runtimeExecutable": "C:/Program Files (x86)/Microsoft/Edge Dev/Application/msedge.exe",
      "runtimeArgs": ["--remote-debugging-port=9222"]
    },
    {
      "type": "msedge",
      "request": "attach",
      "url": "http://localhost:3000",
      "name": "Attach to Edge",
      "port": 9222,
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Brave",
      "runtimeExecutable": "C:\\Program Files\\BraveSoftware\\Brave-Browser\\Application\\brave.exe",
      "userDataDir": true,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
